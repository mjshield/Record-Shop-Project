<h2>New Artist</h2>

<div>

  <div class="form-box">
    <div class="form-wrapper">
      <form action="/artists" method="POST">

        <div class="form-el">
        <label for="name-field">Name:</label><br>
        <input type="text" name="artist_name"><br>
        </div>

        <div class="form-el">
        <input class="btn btn--action" type='submit' value="Submit">
        </div>
        
      </form>
    </div>
  </div>

  <div class="inventory-wrapper">
    <% @artists.each do |artist| %>

      <figure class="container-artist">
        <p><strong><%= artist.artist_name %></strong></p>
        <p><a href="/artists/<%= artist.id %>">View</a></p>

      </figure>
    

    <% end %>
  </div>
</div>